{
  "compilerOptions": {
  
    "module": "commonjs",
    // "module": "ESNext",
    "paths": {
      "@/common/*": ["../common/*"]
    },
    "outDir": "build",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "lib": ["es2022"],
    "strict": true,
    "target": "es6",
    "skipLibCheck": true, // Avoid error with old dependency saml-passport, hoepfully will be fixed in the future
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*", "jest.config.ts"]
}
