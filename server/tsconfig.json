{
  "compilerOptions": {
    "module": "commonjs",
    // "module": "ESNext",
    "paths": {
      "@/common/*": ["../common/*"]
    },
    "outDir": "build",
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "test/**/*", "jest.config.ts"]
}
