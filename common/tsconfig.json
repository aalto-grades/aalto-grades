// For @typescript-eslint to work
{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "paths": {
      "@/common/*": ["../common/*"]
    },
    "esModuleInterop": true,
    "strict": true,
    "target": "es6"
  },
  "exclude": ["node_modules"],
  "include": ["types/**/*", "util/**/*"]
}
